{% extends 'base.html.twig' %}

{% block title %}Book index{% endblock %}

{% block body %}
    <h1>Book index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>BookId</th>
                <th>Id</th>
                <th>Series</th>
                <th>Number</th>
                <th>Name</th>
                <th>Publisher</th>
                <th>Author</th>
                <th>Price</th>
                <th>ReleaseDate</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for book in books %}
            <tr>
                <td>{{ book.bookId }}</td>
                <td>{{ book.id }}</td>
                <td>{{ book.series }}</td>
                <td>{{ book.number }}</td>
                <td>{{ book.name }}</td>
                <td>{{ book.publisher }}</td>
                <td>{{ book.author }}</td>
                <td>{{ book.price }}</td>
                <td>{{ book.releaseDate ? book.releaseDate|date('Y-m-d') : '' }}</td>
                <td>
                    <a href="{{ path('app_book_show', {'bookId': book.bookId}) }}">show</a>
                    <a href="{{ path('app_book_edit', {'bookId': book.bookId}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_book_new') }}">Create new</a>
{% endblock %}
